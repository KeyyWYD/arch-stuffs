#!/bin/bash

# Idk maybe bored

greetr() {
  local host=$(cat /etc/hostname)
  local user=$(whoami)
  local date=$(date "+%A %d/%m/%y")
  local time=$(date "+%I:%M")

  local message=$(printf "Welcome to %s, %s!\n  %s %s\n    Enjoy your session! " "$host" "$user" "$date" "$time")
  
  notify-send "$message"
}

greetr

exit 0
