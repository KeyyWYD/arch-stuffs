
{
  "layer": "top",
  "position": "top",
  "margin": "5 5 0 5",
  "fixed-center": true,
  "reload_style_on_change": true,

  "modules-left": [
    "custom/menu",
    "hyprland/workspaces",
    "group/telementry"
  ],

  "modules-center":[
    "clock"
  ],

  "modules-right": [
    "custom/player",
    "hyprland/language",
    "group/wireless",
    "group/hardware"
  ],

  "group/telementry": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": true
    },
    "modules": [
      "custom/system",
      "custom/separator#space",
      "cpu",
      "custom/separator#dot",
      "memory",
      "custom/separator#dot",
      "temperature"
    ]
  },

  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "wireplumber",
      "custom/battery"
    ]
  },

  "group/wireless": {
    "orientation": "horizontal",
    "modules": [
      "network"
    ]
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{icon}",
    "format-icons": {
      "empty": "<span font='8'></span>",
      "active": "<span font='12'>󰮯</span>",
      "default": "󰊠"
    },
    "persistent-workspaces": {
      "*": 4
    }
  },

  "hyprland/window": {
    "format": "{initialTitle}",
    "rewrite": {
      "": "Home",
      "kitty": "Terminal",
      "alacritty": "Terminal",
      "(.*) Dolphin": "Files",
      "Mozilla Firefox": "Firefox",
      "Firefox (.*)": "Firefox",
      "chat.openai.com_/": "ChatGPT 3.5",
      "web.whatsapp.com_/": "Whatsapp Web",
      "neofetch": "About PC",
      "fastfetch": "About PC",
      "Enter name of file to save to…": "Save File",
      "Beeper (.*)": "Beeper",
      "(.*) Thorium": "Thorium",
      "Spotify Free": "Spotify",
      "Spotify Premium": "Spotify"
    },
    "tooltip": false
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "en",
    "format-es": "es",
    "format-ru": "ru",
    "on-click": "keyboard"
  },

  "cpu": {
    "format": "􀧓 {usage}%",
    "tooltip": false
  },

  "memory": {
    "format": "   {}%",
    "tooltip": false
  },

  "temperature": {
    "critical-threshold": 50,
    "format": "􀇬 {temperatureC}°C",
    "tooltip": false
  },

  "clock": {
    "format": "􀉉 {:%A %h.%d  /  􀐫 %I:%M %p}",
    "tooltip": false
  },

  "tray": {
    "icon-size": 21,
    "spacing": 5,
    "tooltip": false
  },

  "network": {
    "format-wifi": "<span size='large'>{icon}</span>",
    "format-disabled": "􀑓 ",
    "format-ethernet": " {bandwidthDownBytes}  {bandwidthUpBytes}",
    "format-linked": "{ifname} (No IP) 􀙇",
    "format-disconnected": "􀙈 ",
    "format-icons": ["󰤯 ", "󰤟 ", "󰤢 ", "󰤥 ", "󰤨 "],
    "interval": 1,
    "nospacing": 1,
    "max-length": 8,
    "on-click": "nmcli dev wifi rescan; hyprctl notify 5 1500 'rgb(d3c6aa)' 'Wifi rescan!'",
    "tooltip": false
  },

  "backlight": {
    "format": "{icon}  {percent}%",
    "format-icons": ["", "", "", "", "", "", "", "", ""],
    "smooth-scrolling-threshold": 5.0,
    "tooltip": false
  },

  "wireplumber": {
    "on-click": "pavucontrol -t 3",
    "format": "{icon}",
    "format-muted": "􀊣 ",
    "format-icons": ["􀊡 ", "􀊥 ", "􀊧 ", "􀊩 "],
    "tooltip": false
  },

  "custom/separator#space": {
    "format": " ",
    "tooltip": false
  },

  "custom/separator#right": {
    "format": "",
    "tooltip": false
  },

  "custom/separator#line": {
    "format": "|",
    "tooltip": false
  },

  "custom/separator#dot": {
    "format": "  ",
    "tooltip": false
  },

  "custom/menu": {
    "format": "<span size='large'></span>",
    "on-click": "pkill rofi || $HOME/.config/rofi/scripts/menu",
    "tooltip": false
  },

  "custom/battery": {
    "format": "{}",
    "interval": 1,
    "exec": "battery",
    "tooltip": false
  },

  "custom/system": {
    "format": "􀐞",
    "on-click": "alacritty -e btop || kitty btop",
    "tooltip": false
  },

  "custom/cava": {
    "format": "{}",
    "exec": "$HOME/.config/waybar/plugins/cava"
  },

  "custom/player": {
    "format": "{}",
    "interval": 1,
    "on-click":"playerctl play-pause",
    "exec": "player --bar",
    "max-length": 19,
    "tooltip": false
  }
}
